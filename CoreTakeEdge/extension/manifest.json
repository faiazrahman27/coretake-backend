{
  "manifest_version": 3,
  "name": "CoreTake - Free Summarizer",
  "version": "1.0",
  "description": "Summarize any webpage with a free Python backend.",
  "permissions": ["activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Summarize Page"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
